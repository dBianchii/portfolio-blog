      <section class="flex min-h-screen flex-col items-center gap-4">
        <img
          alt="Gabriel Bianchi"
          class="size-16 rounded-full"
          src="https://github.com/dbianchii.png"
        />
        <h1 class="text-3xl font-bold">Gabriel Bianchi</h1>
        <h2 class="text-3xl font-bold">Full stack Web developer</h2>
        <div class="absolute inset-0 -z-10 flex items-center justify-center">
          <FlickeringGrid
            client:load
            className="relative top-60 [mask-image:radial-gradient(600px_circle_at_center,white,transparent)]"
            squareSize={5}
            gridGap={4}
            color="#60A5FA"
            maxOpacity={0.5}
            flickerChance={0.009}
            height={100}
          />
