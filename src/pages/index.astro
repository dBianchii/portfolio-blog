---
import "~/styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Timeline from "../components/react/timeline";
import { DevLogos } from "~/components/react/dev-logos";
import FlickeringGrid from "~/components/react/ui/flickering-grid";
---

<!doctype html>
<html lang="en" class="antialiased transition-all">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
